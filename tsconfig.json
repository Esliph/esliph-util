{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES6"
        ],
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "declaration": true,
        "declarationDir": "./dist",
        "removeComments": true,
        "sourceMap": false,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@lib/*": [
                "src/lib/*"
            ],
            "@util/*": [
                "src/util/*"
            ]
        }
    },
    "exclude": [
        "./dist",
        "./src/@test"
    ]
}