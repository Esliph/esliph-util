{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES6"
        ],
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "types": [
            "node",
        ],
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@lib/*": [
                "src/lib/*"
            ],
            "@@types/*": [
                "@types/*"
            ],
        }
    },
    "exclude": [
        "./dist",
    ]
}