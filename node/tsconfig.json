{
    "compilerOptions": {
        "lib": ["ES6"],
        "moduleResolution": "node",
        "types": ["node"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "removeComments": true,
        "sourceMap": false,
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "exclude": ["./dist", "./src/@test", "./src/test"]
}
